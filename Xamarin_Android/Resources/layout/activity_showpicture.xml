<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_ShowPicture_height"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_ShowPicture_EdT_Height_text"
            android:inputType="number"
            android:id="@+id/EdT_Height"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_ShowPicture_width"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_ShowPicture_EdT_Width_text"
            android:inputType="number"
            android:id="@+id/EdT_Width"/>
    </GridLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_ShowPicture_Btn_Go"
        android:id="@+id/Btn_Go"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="@string/activity_ShowPicture_Img_Content_Desc"
        android:id="@+id/Img_Content"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/PrB_LoadingPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="40"/>
</LinearLayout>
