<?xml version="1.0" encoding="utf-8"?>
<!--Die Layout-Dateien beinhalten die angezeigten Views. Diese sind einer Activity.cs
zugeordnet. IDs und Strings finden sich in den jeweiligen Ressourcen-XMLs
wieder.-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_Txv_Anweisung"
        android:text="@string/activity_main_Txv_Anweisung_Text"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_Edt_Input"
        android:inputType="number"
        android:hint="@string/activity_main_Edt_Input_Hint"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_Btn_Ok"
        android:text="@string/activity_main_Btn_Ok_Text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_Btn_Google"
        android:text="@string/activity_main_Btn_Google_Text"/>

    <Button
        android:id="@+id/activity_main_Btn_ShowPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_Btn_ShowPicture_Text"/>


</LinearLayout>